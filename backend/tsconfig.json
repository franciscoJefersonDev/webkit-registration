{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["ESNext"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	}
}
